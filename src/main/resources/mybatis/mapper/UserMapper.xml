<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.github.webshop.dao.UserMapper">
    <select id="findByName" parameterType="string" resultType="user">
        select * from t_user where name=#{name}
    </select>
    <select id="findByEmail" parameterType="string" resultType="user">
        select * from t_user where email=#{email}
    </select>
    <select id="findByNamePsw" parameterType="string" resultType="user">
        select id,name,password from t_user where name=#{name} and password=#{psw}
    </select>

    <insert id="add" parameterType="user">
        insert into t_user(name,password,email) values(#{userName} , #{password} , #{email} )
    </insert>

</mapper>